@model IEnumerable<_24DH113182_LTW.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">Danh sách danh mục</h2>

<table class="table bg-info col-md-12">
    <tr>
        <th class="bg-success col-md-8">
            Tên danh mục
        </th>
        <th class="bg-success col-md-4"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}
    
</table>
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
