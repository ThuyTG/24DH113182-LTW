@model _24DH113182_LTW.Models.ViewModel.SearchProductVM

@{
    ViewBag.Title = "Tìm kiếm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Tìm kiếm</title>
    <style>
        /* Container tổng thể */
        .search-section {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px 20px;
        }

        /* Search form container */
        .search-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .search-container .form-control {
            flex: 1;
            min-width: 200px;
            max-width: 280px;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
        }

        .search-container .form-control:focus {
            outline: none;
            border-color: #007bff;
        }

        .search-container .btn-primary {
            padding: 10px 30px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            white-space: nowrap;
        }

        .search-container .btn-primary:hover {
            background-color: #0056b3;
        }

        /* Order/Sort container */
        .order-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 6px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .order-container {
            font-size: 14px;
            color: #333;
            font-weight: 500;
        }

        .order-container a {
            color: #007bff;
            text-decoration: none;
            font-size: 14px;
            padding: 6px 12px;
            border-radius: 4px;
            background-color: white;
            border: 1px solid #ddd;
        }

        .order-container a:hover {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }
   
    </style>
</head>

<body>
    @*Form tìm kiếm sản phẩm*@
    @using (Html.BeginForm("Index", "Products", FormMethod.Get))
     {
        <div class="form-group search-container">
            @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder = "Nhập tên, mô tả hoặc loại sản phẩm" })
            @Html.TextBoxFor(m => m.MinPrice, new { @class = "form-control", placeholder = "Nhập giá tối thiểu", type = "number" })
            @Html.TextBoxFor(m => m.MaxPrice, new { @class = "form-control", placeholder = "Nhập giá tối đa", type = "number" })
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
        <div class="form-group order-container">
            Sắp xếp theo:
            @Html.ActionLink("Tên tăng dần", "Index", new { sortOrder = "name_asc", searchTerm = Model.SearchTerm })
            @Html.ActionLink("Tên giảm dần", "Index", new { sortOrder = "name_desc", searchTerm = Model.SearchTerm })
            @Html.ActionLink("Giá tăng dần", "Index", new { sortOrder = "price_asc", searchTerm = Model.SearchTerm })
            @Html.ActionLink("Giá giảm dần", "Index", new { sortOrder = "price_desc", searchTerm = Model.SearchTerm })
        </div>
     }
    @*Form kết quả tìm kiếm*@
    @Html.Partial("PVListProduct", Model)
</body>

</html>