@model _24DH113182_LTW.Models.ViewModel.SearchProductVM
@using PagedList.Mvc;
<head>
    <style>
        img {
            height: 150px;
            width: 150px;
        }
    </style>
</head>


@* ====== Hiển thị danh sách sản phẩm =====*@
@if (Model.products != null && Model.products.Any())
{
    <h2>Danh sách sản phẩm</h2>


    <table class="table bg-info container-fluid">
        <tr>
            <th class="bg-success col-md-2">Hình ảnh</th>
            <th class="bg-success col-md-3">Tên sản phẩm</th>
            <th class="bg-success col-md-1">Đơn giá</th>
            <th class="bg-success col-md-2">Danh mục</th>
            <th class="bg-success col-md-4"></th>
        </tr>

        @foreach (var item in Model.products)
        {
            <tr>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ProductImage)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" })
                </td>
            </tr>
        }

    </table>
    //Hiển thị phân trang
    <div class="pagination-container">
        @Html.PagedListPager(
         Model.products,
         page => Url.Action("Index", new { page, searchTerm = Model.SearchTerm, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice, sortOrder = Model.SortOrder })
        )
    </div>
}
else
{
    <p>Không tìm được sản phẩm nào phù hợp</p>
}

<div class="form-group">
    <div class="col-md-offset-8 col-md-4">
        @Html.ActionLink("Tạo sản phẩm mới", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>