@model _24DH113182_LTW.Models.ViewModel.Cart

@{ 
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<style>
    .shoppingcart {
        background-color: ghostwhite;
    }

    .cart-section {
        background-color: white;
        border: 1px groove #ffffff;
        border-radius: 10px;
        padding: 20px;
        margin: 10px;
    }

    .cart-button {
        width: 200px;
        border: 1px solid #808080;
        margin: 10px;
    }

    .shoppingcart tr {
        font-size: smaller;
    }
</style>
<script>
    function cartUpdateQuantity(id, newQuantity) {
        const form = document.createElement('form');
        form.method = 'post';
        form.action = 'shoppingcart.php?action=update&id=' + id;

        const idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'id';
        idInput.value = id;
        form.appendChild(idInput);

        const quantityInput = document.createElement('input');
        quantityInput.type = 'hidden';
        quantityInput.name = 'quantity';
        quantityInput.type = 'hidden';
        form.appendChild(quantityInput);
        form.submit();
</script>

<h2>Giỏ Hàng</h2>
<div class="shoppingcart">
    @if(!Model.Items.Any() || Model.Items == null)
    { 
        <p>Bạn chưa có sản phẩm nào trong giỏ hàng</p>
    }
    else 
    { 
        <div class="col-md-8 cart-section">
            <table>
                <thead>
                    <tr>
                        <th colspan="2">Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                        <th title="Xóa tất cả mặt hàng">
                            @*Tìm ảnh remove để thay "Remove" = <img src="~/Image/remove.png" style="max-height: 20px"/>*@
                            <a href="@Url.Action("ClearCart", "Cart", null)">Remove</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.Items)
                    {
                        <tr>
                            <td><img src="@item.ProductImage" alt="@item.ProductName" style="max-height: 80px"/></td>
                            <td class="col-md-3">@item.ProductName</td>
                            <td>
                                @using (Html.BeginForm("UpodateQuantity", "Cart", FormMethod.Post))
                                {
                                    <input type="hidden" name="id" value="@item.ProductID" />
                                    <button type="button" style="width: 20px" onclick="cartUpdateQuantity(@item.ProductID, @item.Quantity - 1)">➖</button>
                                    <input type="number"/>
                                    <button type="button" style="width: 20px" onclick="cartUpdateQuantity(@item.ProductID, @item.Quantity + 1)">➕</button>
                                }
                            </td>
                            <td>@item.UnitPrice.ToString("N0")</td>
                            <td>@item.TotalPrice.ToString("N0")</td>
                            <td>
                                <a href="@Url.Action("RemoveFromCart", "Cart", new {id = item.ProductID})">
                                    @*Tìm ảnh remove để thay "Remove" = <img src="~/Image/remove.png" style="max-height: 20px"/>*@
                                    Remove
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
        </div>
        <div class="col-md-3 cart-section">
            <div><strong>Tổng giá trị: &nbsp; <span style="color:rosybrown">@Model.TotalValue().ToString("N0")</span></strong></div>
            <div>@Html.ActionLink("Mua hàng", "Checkout", "Cart", null, new {@class = "btn btn-danger cart-button"})</div>
        </div>
    }
</div>
<div class="col-md-12">
    @Html.ActionLink("Tiếp tục mua hàng", "Index", "Home", null, new { @class = "btn btn-primary cart-button" })
</div>