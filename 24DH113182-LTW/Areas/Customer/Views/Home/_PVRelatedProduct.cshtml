@model _24DH113182_LTW.Models.ViewModel.ProductDetailVM
@using PagedList.Mvc

<link rel="stylesheet" type="text/css" href="~/Content/myStyle/CustomerHome.css" />

@if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
{
    <section class="container-fluid listProduct">
        <h4 style="font-weight: bold">Sản phẩm tương tự</h4>
        <ul class="feature-container">
            @foreach (var product in Model.TopProducts)
            {
                <li class="fproduct-item">
                    <div>
                        <a href="@Url.Action("ProductDetail", "Home", new {id = product.ProductID})">
                            <img src="@Html.DisplayFor(modelItem => product.ProductImage)" />
                        </a>
                    </div>
                    <div>
                        <h5>@Html.DisplayFor(modeItem => product.ProductName)</h5>
                        <p class="prodSale">@Html.DisplayFor(modeItem => product.ProductPrice)</p>
                    </div>
                </li>
            }
        </ul>
    </section>
}