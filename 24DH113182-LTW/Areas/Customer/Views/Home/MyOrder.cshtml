@model _24DH113182_LTW.Models.ViewModel.MyOrderVM

@{
    ViewBag.Title = "Đơn hàng của tôi";
    Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
}

<h2>Đơn hàng của tôi</h2>

<div class="row">
    <div class="col-md-8">
        <ul class="nav nav-tabs">
            <li class="@(Model.CurrentTab == "All" ? "active" : "")">
                @Html.ActionLink("Tất cả đơn", "MyOrder", new { status = "All", search = Model.SearchTerm })
            </li>
            <li class="@(Model.CurrentTab == "ChoThanhToan" ? "active" : "")">
                @Html.ActionLink("Chờ thanh toán", "MyOrder", new { status = "ChoThanhToan", search = Model.SearchTerm })
            </li>
            <li class="@(Model.CurrentTab == "DangXuLy" ? "active" : "")">
                @Html.ActionLink("Đang xử lý", "MyOrder", new { status = "DangXuLy", search = Model.SearchTerm })
            </li>
            <li class="@(Model.CurrentTab == "DangVanChuyen" ? "active" : "")">
                @Html.ActionLink("Đang vận chuyển", "MyOrder", new { status = "DangVanChuyen", search = Model.SearchTerm })
            </li>
            <li class="@(Model.CurrentTab == "DaGiao" ? "active" : "")">
                @Html.ActionLink("Đã giao", "MyOrder", new { status = "DaGiao", search = Model.SearchTerm })
            </li>
            <li class="@(Model.CurrentTab == "DaHuy" ? "active" : "")">
                @Html.ActionLink("Đã hủy", "MyOrder", new { status = "DaHuy", search = Model.SearchTerm })
            </li>
        </ul>
    </div>

    <div class="col-md-4">
        @using (Html.BeginForm("MyOrder", "Order", FormMethod.Get))
        {
            @Html.Hidden("status", Model.CurrentTab ?? "All")
            <div class="input-group" style="margin-top:8px;">
                <input type="text" name="search" class="form-control" placeholder="Tìm theo mã đơn hoặc tên sản phẩm" value="@(Model.SearchTerm ?? "")" />
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">Tìm</button>
                </span>
            </div>
        }
    </div>
</div>

<hr />

@if (Model.Orders == null || !Model.Orders.Any())
{
    <p>Không có đơn hàng nào phù hợp.</p>
}
else
{
    if (Model.CurrentTab == "All" || string.IsNullOrEmpty(Model.CurrentTab))
    {
        var groups = Model.Orders.GroupBy(o => o.PaymentStatus ?? "Không xác định");
        foreach (var g in groups)
        {
            <h4>Trạng thái: @g.Key (@g.Count())</h4>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Sản phẩm</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in g)
                    {
                        <tr>
                            <td>@order.OrderID</td>
                            <td>@order.OrderDate.ToString("g")</td>
                            <td>
                                @string.Join(", ", order.OrderDetails.Select(d => d.Product.ProductName + " x" + d.Quantity))
                            </td>
                            <td>@order.TotalAmount.ToString("C")</td>
                            <td>@order.PaymentStatus</td>
                            <td>
                                @if (order.OrderDetails.Any())
                                {
                                    var firstProdId = order.OrderDetails.First().ProductID;
                                    <a class="btn btn-xs btn-success" href="@Url.Action("ProductDetail", "Home", new { id = firstProdId })">Mua lại</a>
                                }
                                <a class="btn btn-xs btn-info" href="@Url.Action("OrderSuccess", "Order", new { id = order.OrderID })">Xem chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Ngày đặt</th>
                    <th>Sản phẩm</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.OrderID</td>
                        <td>@order.OrderDate.ToString("g")</td>
                        <td>
                            @string.Join(", ", order.OrderDetails.Select(d => d.Product.ProductName + " x" + d.Quantity))
                        </td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.PaymentStatus</td>
                        <td>
                            @if (order.OrderDetails.Any())
                            {
                                var firstProdId = order.OrderDetails.First().ProductID;
                                <a class="btn btn-xs btn-success" href="@Url.Action("ProductDetail", "Home", new { id = firstProdId })">Mua lại</a>
                            }
                            <a class="btn btn-xs btn-info" href="@Url.Action("OrderSuccess", "Order", new { id = order.OrderID })">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}