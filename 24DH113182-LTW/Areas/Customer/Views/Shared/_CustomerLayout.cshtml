<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Image/Header/faviconIMG.png" type="image/png">
    @*<link rel="stylesheet" href="~/Content/myStyle/Layout.css" />*@
    <link rel="stylesheet" href="~/Content/myStyle/Header.css" />
    <link rel="stylesheet" href="~/Content/myStyle/Footer.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-nVo7Wk..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>@ViewBag.Title - Bookara</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        // Khởi tạo PersonalMenuVM để sử dụng trong header
        var cart = Session["Cart"] as _24DH113182_LTW.Models.ViewModel.Cart;

        ViewBag.pmmodel = new _24DH113182_LTW.Models.ViewModel.PersonalMenuVM
        {
            IsLoggedIn = User.Identity.IsAuthenticated,
            Username = User.Identity.IsAuthenticated ? User.Identity.Name : string.Empty,
            CartCount = 0
        };

        if (cart != null && cart.Items.Any())
        {
            ViewBag.pmmodel.CartCount = cart.Items.Count();
        }
    }
    @* 1. Header*@
    <header class="site-header">
        <div class="site-header__container">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home", new { area = "Customer" })" class="site-header__logo">
                <img src="~/Content/images/Logo.png" alt="Bookora Logo">
            </a>

            <!-- Navigation Menu -->
            <nav class="site-header__nav">
                <!-- User Menu -->
                <div class="site-header__user-menu">
                    <div class="site-header__user-greeting">
                        <i class="fa-regular fa-circle-user"></i>
                        @if (ViewBag.pmmodel.IsLoggedIn)
                        {
                            <span>Xin chào, @ViewBag.pmmodel.Username</span>
                        }
                        else
                        {
                            <span>Tài khoản</span>
                        }
                    </div>

                    <!-- Dropdown Menu -->
                    <div class="site-header__dropdown">
                        @if (ViewBag.pmmodel.IsLoggedIn)
                        {
                            <a href="@Url.Action("ProfileInfo", "Account", new { area = "Customer" })">
                                <i class="fa-solid fa-user"></i>
                                <span>Thông tin tài khoản</span>
                            </a>
                            <a href="@Url.Action("MyOrder", "Order", new { area = "Customer" })">
                                <i class="fa-solid fa-clock-rotate-left"></i>
                                <span>Lịch sử mua hàng</span>
                            </a>
                            <a href="@Url.Action("Logout", "Account", new { area = "Customer" })"
                               onclick="return confirm('Bạn có chắc chắn muốn đăng xuất?');">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                <span>Đăng xuất</span>
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Register", "Account", new { area = "Customer" })">
                                <i class="fa-solid fa-user-plus"></i>
                                <span>Đăng ký</span>
                            </a>
                            <a href="@Url.Action("Login", "Account", new { area = "Customer" })">
                                <i class="fa-solid fa-right-to-bracket"></i>
                                <span>Đăng nhập</span>
                            </a>
                        }
                    </div>
                </div>

                <!-- Shopping Cart -->
                <div class="site-header__cart">
                    <a href="@Url.Action("Index", "Cart", new { area = "Customer" })" class="site-header__cart-link">
                        <i class="fa-solid fa-cart-shopping site-header__cart-icon"></i>
                        @if (ViewBag.pmmodel.CartCount > 0)
                        {
                            <span class="site-header__cart-badge" id="cart-count">@ViewBag.pmmodel.CartCount</span>
                        }
                    </a>
                </div>
            </nav>
        </div>
    </header>

    @* 2. Body *@
    @RenderBody()

    @* 3. Footer *@
    <footer class="site-footer">
        <div class="site-footer__content">
            <div class="site-footer__section">
                <h3>Liên hệ</h3>
                <p>📧 info@Bookora.com</p>
                <p>📱 0123 456 789</p>
                <p>📍 Hồ Chí Minh, Việt Nam</p>
            </div>
            <div class="site-footer__section">
                <h3>Về Bookora Books</h3>
                <ul>
                    <li><a href="#">Liên hệ</a></li>
                    <li><a href="#">Về chúng tôi</a></li>
                    <li><a href="#">Chính sách hoàn trả và hoàn tiền</a></li>
                    <li><a href="#">Chính sách bảo mật</a></li>
                    <li><a href="#">Chính sách vận chuyển</a></li>
                </ul>
            </div>
        </div>
        <div class="site-footer__bottom">
            <p>&copy; 2025 Bookora. Tất cả quyền được bảo lưu.</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</body>
</html>
